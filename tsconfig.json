{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      },
      {
        "name": "typescript-styled-plugin"
      }
    ],
    "paths": {
      "@*": [
        "src/*"
      ],
      "@views/*": [
        "src/views/*"
      ],
      "@public/*": [
        "public/*"
      ],
      "@constants/*": [
        "src/shared/constants/*"
      ],
      "@utils/*": [
        "src/shared/utils/*"
      ],
      "@hooks/*": [
        "src/shared/hooks/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}